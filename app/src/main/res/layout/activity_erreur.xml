<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MathsExo1ErreurActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ERREURS(S) !!"
        android:textSize="70px"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/nbE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre d'erreur(s) : "
        android:gravity="center"
        />

    <Button
        android:id="@+id/corRep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="CORRIGER MES REPONSES" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="bottom">

        <Button
            android:id="@+id/chgmtTabl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="CHOISIR UNE AUTRE TABLE" />

    </LinearLayout>

</LinearLayout>